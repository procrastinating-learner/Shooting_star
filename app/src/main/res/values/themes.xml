<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Stars" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_900</item>
        <item name="colorPrimaryVariant">@color/green_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lime_900</item>
        <item name="colorSecondaryVariant">@color/lime_800</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="CustomRatingBar" parent="@android:style/Widget.Material.RatingBar.Indicator">
        <item name="android:progressTint">@color/amber_900</item>  <!-- Filled stars color -->
        <item name="android:progressBackgroundTint">@color/amber_800</item>  <!-- Empty stars color -->
        <item name="android:secondaryProgressTint">@color/amber_A200</item>  <!-- Half-filled stars -->
    </style>
</resources>